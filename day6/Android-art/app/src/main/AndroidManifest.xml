<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ienning.android_art">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".utils.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".utils.TestActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:launchMode="standard" />
        <activity android:name=".utils.DemoActivity_1"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_scene_1"
            android:launchMode="standard" />
        <activity android:name=".utils.ThirdActivity"
            android:configChanges="screenLayout"
            android:label="@string/app_name" />
        <activity android:name=".utils.DemoActivity_2"
            android:configChanges="screenLayout"
            android:launchMode="standard"
            android:label="@string/title_scene_1" />
    </application>

</manifest>